{
  "manifest_version": 3,
  "name": "HyperBot",
  "version": "1.0",
  "description": "An AI chatbot Chrome extension using HyperLeap AI",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api-dev1.hyperleap.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon.png"
  }
}
